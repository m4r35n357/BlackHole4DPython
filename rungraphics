#!/bin/sh

ic=${1:-''}

d=data
p=progress

./bh3d.py <$ic >$d &
PID=$!
sleep 1
./filegraphics.py $d $ic&
wait $PID
set $(wc -l $d)
if [ $1 -gt 10000 ]
then
	./filedata.py $d $(($1 / 2000)) &
	./fileprogress.py $d $(($1 / 2000)) &
	./filelissajous.py $d $(($1 / 2000)) &
else
	./filedata.py $d 1 &
	./fileprogress.py $d 1 &
	./filelissajous.py $d 1 &
fi

