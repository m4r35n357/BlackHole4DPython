#!/bin/sh

ic=${1:-''}

d=data

./bh3d.py <$ic >$d &
#./bh3d.rk4.py <$ic >$d &
PID=$!
sleep 1
./filegraphics.py $d $ic &
wait $PID
./filepotential.py potential &
set $(wc -l $d)
if [ $1 -gt 10000 ]
then
	./datachart.py $d $(($1 / 2000)) &
	./errorchart.py $d $(($1 / 2000)) &
else
	./datachart.py $d 1 &
	./errorchart.py $d 1 &
fi

