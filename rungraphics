#!/bin/sh

ic=${1:-''}

d=data

./bh3d.py <$ic >$d &
#./bh3d.rk4.py <$ic >$d &
PID=$!
sleep 1
./filegraphics.py $d $ic &
wait $PID
./filepotential.py potential &
set $(wc -l $d)
if [ $1 -gt 10000 ]
then
	./chart.py $d $(($1 / 2000)) 't' &
	./chart.py $d $(($1 / 2000)) 'r' &
	./chart.py $d $(($1 / 2000)) 'th' &
	./chart.py $d $(($1 / 2000)) 'ph' &
	./errorchart.py $d $(($1 / 2000)) &
else
	./chart.py $d 1 't' &
	./chart.py $d 1 'r' &
	./chart.py $d 1 'th' &
	./chart.py $d 1 'ph' &
	./errorchart.py $d 1 &
fi

